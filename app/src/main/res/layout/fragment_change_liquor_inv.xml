<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="400dp"
    android:background="@color/DarkLeaves">

    <GridLayout
        android:layout_width="600dp"
        android:layout_height="380dp"
        android:orientation="horizontal">
<!--
        <TextView
            android:id="@+id/Liquor_list"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:text="@string/BestOTimes"
            android:textColor="@color/white"
            android:textSize="20dp"/>
            -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="@color/white"
            android:id="@+id/textView5"
            android:layout_row="0"
            android:layout_column="0" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/liquor_spinner"

            android:textColor="@color/white"
            android:drawSelectorOnTop="true"
            android:prompt="@string/command_list"
            android:entries="@array/liquor_array"
            android:layout_row="0"
            android:layout_column="1" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:entries="@array/brand_array"
            android:id="@+id/spinner"
            android:textColor="@color/white"
            android:layout_row="0"
            android:layout_column="2" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:entries="@array/vol_array"
            android:id="@+id/spinner2"
            android:textColor="@color/white"
            android:layout_row="0"
            android:layout_column="3" />


    </GridLayout>
</ScrollView>