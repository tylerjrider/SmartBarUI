<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1024dp"
    android:layout_height="600dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"


    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/smart_bar_background"

    tools:context=".MainActivity">
<!--
    <TextView
        android:id="@+id/greeting_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/listSeparatorTextViewStyle"
        android:text="Greetings"  />-->

    <ImageView
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:background="@drawable/usb_connection"
        android:backgroundTint="@color/white"
        android:rotation="90"
        android:id="@+id/usbCon3" />

    <Button
        android:id="@+id/hello_pi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendMessage"
        android:text="Hello_Pi"  />

    <Button
        android:id="@+id/fuck_pi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendMessage"
        android:text="FUCK_PI"  />

    <TextView
        android:id="@+id/sensor_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/listSeparatorTextViewStyle"
        android:text="Send Messages"  />



<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/button5">
     <EditText
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/editText"
         android:width="200dp"
         android:layout_column="0"
         android:layout_columnSpan="2"
         android:layout_row="0" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/button2"
        android:onClick="SendCustomText"
        android:layout_column="2"
        android:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/incoming_message"
            android:text="Incoming Stream"
            android:textSize="30sp"
            android:typeface="serif"
            android:textColor="@color/Bronze"
            android:width="300dp"
            android:layout_column="3"
            android:layout_row = "0"/>

        <TextView
            android:id="@+id/display_area"
            android:background="@drawable/text_box"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_row="1"
            android:layout_rowSpan="6"
            android:layout_column="3" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton"
            android:onClick="sendMessage"
            android:layout_row="1"
            android:layout_column="0" />
        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:onClick="sendMessage"
            android:layout_column="0"
            android:layout_row="2"
            android:id="@+id/toggleButton2" />
         <ToggleButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="New ToggleButton"
             android:onClick="sendMessage"
             android:layout_column="0"
             android:layout_row="3"
             android:id="@+id/toggleButton3" />


    <ToggleButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="New ToggleButton"
             android:onClick="sendMessage"
             android:layout_column="0"
             android:layout_row="4"
             android:id="@+id/toggleButton4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TryToReconnect"
        android:onClick="TryToReconnect"
        android:id="@+id/button4"
        android:layout_row="4"
        android:layout_column="4" />

    <ToggleButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="New ToggleButton"
             android:layout_column="0"
             android:onClick="sendMessage"
             android:layout_row="5"
             android:id="@+id/toggleButton5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Windows"
        android:id="@+id/button"
        android:onClick="TryNewWindow"
        android:layout_row="5"
        android:layout_column="4" />

    <ToggleButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="New ToggleButton"
         android:layout_column="0"
         android:onClick="sendMessage"
         android:layout_row="6"
         android:id="@+id/toggleButton6" />

    <TextView
        android:id="@+id/IO1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED"
        android:textSize="30dp"
        android:layout_row="1"
        android:layout_column="1"
        />

    <TextView
        android:id="@+id/IO2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPIO:1"
        android:textSize="30dp"
        android:layout_row="2"
        android:layout_column="1"
        />
    <TextView
        android:id="@+id/IO3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPIO:2"
        android:textSize="30dp"
        android:layout_row="3"
        android:layout_column="1"
        />
    <TextView
        android:id="@+id/IO4_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED.0"
        android:textSize="30dp"
        android:layout_row="4"
        android:layout_column="1"
        />
    <TextView
        android:id="@+id/IO5_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED.1"
        android:textSize="30dp"
        android:layout_row="5"
        android:layout_column="1"
        />
    <TextView
        android:id="@+id/IO6_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#$#"
        android:textSize="30dp"
        android:layout_row="6"
        android:layout_column="1"
        />

</GridLayout>

     </LinearLayout>