<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@drawable/cityscape"
    tools:context="com.example.trider.smartbarui.IdleMenu">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa818583"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:background="@drawable/usb_connection"
        android:backgroundTint="@color/white"
        android:rotation="90"
        android:id="@+id/usbCon" />



    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="150sp"
        android:textColor="#88ffffff"
        android:id="@+id/textClock"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize = "30sp"
        android:background="#44ffffff"
        android:padding="10dp"
        android:textColor="@color/black"
        android:text="Pickup Drink"
        android:onClick="onPickUpClick"
        android:id="@+id/button8"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:background="#44ffffff"
        android:textColor="@color/black"
        android:text="New User?"
        android:id="@+id/button7"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

</LinearLayout>
