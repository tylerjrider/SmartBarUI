<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.tylerrider.raspgui.DebugMenu">


    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/liquor_spinner"
        android:layout_column="0"
        android:layout_row="0"/>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/L_quantity_spinner"
        android:layout_column="1"
        android:layout_row="0"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/Mix2_button"
        android:layout_column="2"
        android:layout_row="0"
        android:onClick="addToMix"
        />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/soda_spinner"
        android:layout_column="0"
        android:layout_row="1"/>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/S_quantity_spinner"
        android:layout_column="1"
        android:layout_row="1" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/Mix_button"
        android:layout_column="2"
        android:layout_row="1"
        android:onClick="addToMix2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to the Drink order"
        android:id="@+id/textView6"
        android:layout_row="2"
        android:layout_column="0"
        />




</GridLayout>
